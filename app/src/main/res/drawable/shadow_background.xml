<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень (сдвинута вниз и вправо) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />  <!-- Полупрозрачный черный -->
            <corners android:radius="4dp" />  <!-- Скругление углов (если нужно) -->
        </shape>
    </item>

    <!-- Основной фон объекта -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />  <!-- Белый фон -->
            <corners android:radius="4dp" />  <!-- Скругление -->
        </shape>
    </item>
</layer-list>