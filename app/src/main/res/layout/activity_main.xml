<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFF4F1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="My Notes"
            android:textColor="#30383A"
            android:textSize="29sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Search you note ...">

        </SearchView>

        <HorizontalScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="All (23)"
                    app:chipCornerRadius="20dp"
                    app:chipStrokeColor="@color/black">

                </com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="Important (3)"
                    app:chipCornerRadius="20dp"
                    app:chipBackgroundColor="#8BD2C9"
                    app:chipStrokeColor="@color/black">

                </com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="To-Do (12)"
                    app:chipCornerRadius="20dp"
                    app:chipBackgroundColor="#F4D798"
                    app:chipStrokeColor="@color/black">

                </com.google.android.material.chip.Chip>


                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="Reminder (3)"
                    app:chipCornerRadius="20dp"
                    app:chipBackgroundColor="#F6A5A0"
                    app:chipStrokeColor="@color/black">

                </com.google.android.material.chip.Chip>

            </LinearLayout>

        </HorizontalScrollView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#F4D798">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To-Do"
                    android:textSize="28sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_margin="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp">

                </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#F6A5A0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:layout_gravity="left"
                        android:layout_marginStart="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp">

                    </androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#8BD2C9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Important"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:layout_gravity="left"
                        android:layout_marginStart="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp">

                    </androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <com.google.android.material.chip.Chip
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:chipCornerRadius="60dp"
                android:layout_gravity="center"
                app:strokeColor="@color/black">

            </com.google.android.material.chip.Chip>

            <com.google.android.material.chip.Chip
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:chipCornerRadius="60dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                app:strokeColor="@color/black">

            </com.google.android.material.chip.Chip>

            <View
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>